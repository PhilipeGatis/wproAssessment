{
  "compilerOptions": {
    "module": "commonjs",
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "baseUrl": "./",
    "paths": {
      "@provi/*": [
        "src/*"
      ],
      "@test/*": [
        "tests/*"
      ]
    },
    "outDir": "./dist",
    "resolveJsonModule": true,
    "target": "es2018",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*"]
}
